<h1 id="aa" class="a">i am sam</h1>
    <h2 id="b" class="b">i am john</h1>
    <h1 id="c" class="a">i am ravi</h1>

    <h2 class="a">i am ria</h2>
    <script>
        let x=document.querySelector('h1')
        console.log(x)
    </script>

